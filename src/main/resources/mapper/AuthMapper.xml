<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="app.lifeni.bms.dao.AuthDao">

    <select id="verifyUserByName" resultType="app.lifeni.bms.entity.model.User">
        select *
        from `user-login`
        where username = #{username}
          AND password = #{password}
    </select>

    <select id="queryUserById" resultType="app.lifeni.bms.entity.model.User">
        select *
        from `user-login`
        where userId = #{userId}
    </select>

    <update id="resetUserPasswordById">
        update `user-login`
        set password = #{newPassword}
        where userId = #{userId}
          AND password = #{oldPassword}
    </update>
</mapper>
